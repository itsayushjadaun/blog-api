<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
     <%- include('./partials/nav') %>
     <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" alt="loadiing" width="500px">
      <p class="mt-4" font-family: cursive ;"><%= blog.body %></p>
     </div>
     <div class="card-footer bg-transparent border-success"><div class="container mt-4">
      <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="50px">
      <%= blog.createdBy.fullName %>
   </div></div>

   <div class="container mt-3">
    <h4>Comments (<%= comments.length %>)</h4>
   
     <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="post" >
        <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Enter your comment"
            aria-describedby="inputGroup-sizing-sm"
          />
          <button type="submit" class="btn btn-dark" >submit</button>
          </div> 
      </form>   
     <% } %>

     <div class="container mt-3" >
      <% comments.forEach(comment => { %>
        <div class="border-bottom border-top">
          <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="50px">
          <%= blog.createdBy.fullName %><pre ><%= comment.content %></pre>
        </div>
      <% }) %>
     </div>

   </div>
     
     
     <%- include('./partials/scripts') %>
  </body>
</html>